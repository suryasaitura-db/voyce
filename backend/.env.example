# Application Settings
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# Database Backend (postgresql or databricks)
DB_BACKEND=postgresql

# PostgreSQL Settings
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=voyce
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_password_here

# Databricks Settings (if using Databricks backend)
DATABRICKS_SERVER_HOSTNAME=your-workspace.cloud.databricks.com
DATABRICKS_HTTP_PATH=/sql/1.0/warehouses/your-warehouse-id
DATABRICKS_ACCESS_TOKEN=your_access_token_here
DATABRICKS_CATALOG=main
DATABRICKS_SCHEMA=voyce

# JWT Settings
JWT_SECRET_KEY=your-super-secret-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=15
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Storage Backend (local, s3, or databricks_volumes)
STORAGE_BACKEND=local
LOCAL_STORAGE_PATH=./uploads

# AWS S3 Settings (if using S3 backend)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
S3_BUCKET_NAME=voyce-uploads

# Databricks Volumes Settings (if using Databricks volumes)
DATABRICKS_VOLUME_PATH=/Volumes/main/voyce/uploads

# Password Requirements
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_DIGIT=true
PASSWORD_REQUIRE_SPECIAL=true

# File Upload Settings
MAX_UPLOAD_SIZE=10485760  # 10MB in bytes
ALLOWED_AUDIO_EXTENSIONS=["wav", "mp3", "m4a", "ogg", "webm"]

# TLS Settings
TLS_MIN_VERSION=1.2

# CORS Settings
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000", "chrome-extension://*"]
